generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Memory {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @map("memory_id") @db.VarChar(255)
  userId        String   @map("user_id") @db.VarChar(255)
  content       String
  mem0MemoryId  String?  @map("mem0_memory_id") @db.VarChar(255)
  sourceChatIds String[] @default([]) @map("source_chat_ids")
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamp(6)
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(6)

  @@index([userId], map: "idx_memories_user_id")
  @@map("memories")
}
